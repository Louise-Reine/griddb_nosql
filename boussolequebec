var cat, mul; 
cat = 0;

var econ, iden, envi, libe, prog; //scores
econ = iden = envi = libe = prog = 0;

var que;
var qqq = 1;

function proprietes(){
  
  
  
  
  //Choix de réponses
  if(q[que][4]==1){
    document.getElementById("aa").value="Fortement d'accord"
    document.getElementById("a").value="Un peu d'accord"
    document.getElementById("d").value="Un peu en désaccord"
    document.getElementById("dd").value="Fortement en désaccord"
  }
  else if(q[que][4]==6){
    document.getElementById("aa").value="Beaucoup plus"
    document.getElementById("a").value="Un peu plus"
    document.getElementById("d").value="Un peu moins"
    document.getElementById("dd").value="Beaucoup moins"
  }
  else{
    var fm;
    var sp;
    if((q[que][4]==2) || (q[que][4]==4)){
      fm = ""
    }
    else{
      fm = "e"
    }
    if((q[que][4]==2) || (q[que][4]==3)){
      sp = ""
    }
    else{
      sp = "s"
    }
    
    document.getElementById("aa").value="Beaucoup plus élevé" + "" + fm + "" + sp
    document.getElementById("a").value="Un peu plus élevé" + "" + fm + "" + sp
    document.getElementById("d").value="Un peu moins élevé" + "" + fm + "" + sp
    document.getElementById("dd").value="Beaucoup moins élevé" + "" + fm + "" + sp
  }
  
  
}

function qc(){
  que = Math.ceil(Math.random()*50)
  if(q[que][1]!=="x"){
  qc()
  }
  else{
    proprietes()
  }
}
qc()
document.getElementById("ques").innerHTML = q[que][0]
q[que][1] = qqq;

function clas(){
  econ+=q[que][eco]*q[que][3]
  iden+=q[que][ide]*q[que][3]
  libe+=q[que][lib]*q[que][3]
  envi+=q[que][env]*q[que][3]
  prog+=q[que][pro]*q[que][3]
}


function rep(a){ //quand le joueur donne sa réponse
  q[que][3] = a
  clas()
  if(qqq<=49){
    qqq++
    qc()
  }
  else{
    fin()
  }
  document.getElementById("ques").innerHTML = q[que][0]
  q[que][1] = qqq;
  document.getElementById("pos").innerHTML = "Question " + qqq + " sur 50"
}

function back(){
  if(qqq==1){
    
  }
  else{
    var y = Math.ceil(Math.random()*50)
    if (q[y][1]==(qqq-1)){
      q[que][1] = "x";
      q[que][3] = "x";
      que = y
      document.getElementById("ques").innerHTML = q[y][0]
      econ-=q[que][eco]*q[que][3]
      iden-=q[que][ide]*q[que][3]
      libe-=q[que][lib]*q[que][3]
      envi-=q[que][env]*q[que][3]
      prog-=q[que][pro]*q[que][3]
      qqq--
      document.getElementById("pos").innerHTML = "Question " + qqq + " sur 50"
      proprietes()
    }
    else{
      back()
    }
  }
}

var d1;
var d2;
var d3;
var d4;
var d5;
function fin(){
  console.log(econ + " " + iden + " " + libe + " " + envi)
  document.getElementById("fir").style.display="none"
  document.getElementById("sec").style.display="block"
  
  document.getElementById("egalite").style.width= 250-Math.floor(125/21*econ) +"px"
  document.getElementById("marches").style.width= 250+Math.floor(125/21*econ) +"px"
  document.getElementById("globaliste").style.width= 250-Math.floor(125/14.5*iden) +"px"
  document.getElementById("nationaliste").style.width= 250+Math.floor(125/14.5*iden) +"px"
  document.getElementById("autorite").style.width= 250-Math.floor(125/23*libe) +"px"
  document.getElementById("liberte").style.width= 250+Math.floor(125/23*libe) +"px"
  document.getElementById("productivite").style.width= 250-Math.floor(125/9.5*envi) +"px"
  document.getElementById("ecologie").style.width= 250+Math.floor(125/9.5*envi) +"px"
  document.getElementById("tradition").style.width= 250-Math.floor(125/17*prog) +"px"
  document.getElementById("progres").style.width= 250+Math.floor(125/17*prog) +"px"
  
  document.getElementById("c1").innerHTML = Math.ceil((50 - 25/21*econ)*10)/10 + "%"
  document.getElementById("c2").innerHTML = Math.floor((50 + 25/21*econ)*10)/10 + "%"
  document.getElementById("c3").innerHTML = Math.ceil((50 - 25/14.5*iden)*10)/10 + "%"
  document.getElementById("c4").innerHTML = Math.floor((50 + 25/14.5*iden)*10)/10 + "%"
  document.getElementById("c5").innerHTML = Math.ceil((50 - 25/9.5*envi)*10)/10 + "%"
  document.getElementById("c6").innerHTML = Math.floor((50 + 25/9.5*envi)*10)/10 + "%"
  document.getElementById("c7").innerHTML = Math.ceil((50 - 25/23*libe)*10)/10 + "%"
  document.getElementById("c8").innerHTML = Math.floor((50 + 25/23*libe)*10)/10 + "%"
  document.getElementById("c9").innerHTML = Math.ceil((50 - 25/17*prog)*10)/10 + "%"
  document.getElementById("c10").innerHTML = Math.floor((50 + 25/17*prog)*10)/10 + "%"
  
  
}






